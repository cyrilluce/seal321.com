{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    // "rootDir": "src",
    "outDir": "ts-build",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "lib":[
      "dom",
      "es2017"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "www",
    "ts-build"
  ],
  "compileOnSave": false
}